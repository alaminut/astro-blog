{
  "extends": "astro/tsconfigs/strict",
  "exclude": ["node_modules"],
  "include": ["src/**/*", ".eslintrc.js", "astro.config.mjs"],
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "jsx": "preserve",
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "src/*": ["src/*"]
    }
  }
}
